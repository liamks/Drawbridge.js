div.center
  h1 Reset Password

  form(action='/reset', method="POST")
    input(type="hidden", name="token", value=token)
    input(type="hidden", name="resetToken", value=resetToken )

    -if(errors.length > 0)
      ul#errors
        for error in errors
          li= error
    div
      label(for="password") Password
      input.span4(type="password", name="password" )

    div
      label(for="confirmPassword") Confirm Password
      input.span4(type="password", name="confirmPassword" )

    div.well
      input.btn.btn-primary(type="submit", value="Reset")
